            andoid:layout_width="wrap_content"
            andoid:layout_height="wrap_content"
            andoid:layout_gravity="center"
            andoid:layout_marginTop="60dp"
            andoid:text="Button Six"/>
        <Button
            andoid:layout_width="wrap_content"
            andoid:layout_height="wrap_content"
            andoid:layout_gravity="center"
            andoid:layout_marginTop="60dp"
            andoid:text="Button Seven"/>
